<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/heguide"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="High Expense Function -\n
1. This module allows you to add your Rare/High Expense on the items you
spent rarely and can keep a track at which Item you spent the most and the least."
            android:textColor="@color/colorBlack"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/itemhe"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/custom_background"
            android:ems="10"
            android:gravity="center"
            android:hint="Item"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/moneyhe"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_background"
            android:ems="10"
            android:gravity="center"
            android:hint="Money Spent"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/addexpensehe"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/inverse_button_color"
            android:gravity="center"
            android:text="Add Expense"
            android:textAllCaps="false"
            android:textColor="@color/inverse_text_color"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/clearexpensehe"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/inverse_button_color"
            android:gravity="center"
            android:text="Clear Expense"
            android:textAllCaps="false"
            android:textColor="@color/inverse_text_color"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/listhe"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_color"
            android:gravity="center"
            android:text="Generate Expense List"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hesteps"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="40dp"
            android:text="High Expense Operation Steps\n
1. Input Item Name and Money spent on respective Item and tap on Add Expense
Button each time.\n2. Once you are done inputting all expenses, simply tap on
Generate Expense List button.\n3. In case you input wrong data, you can tap Clear
Expense button and start again."
            android:textColor="@color/colorBlack"
            android:textSize="18dp" />
    </LinearLayout>
</ScrollView>